<div class="container mt-5">
  <%= turbo_stream_from 'posts' %>
  <h1 class="mb-4">Posts list</h1>

  <div class="d-flex">
    <%= turbo_frame_tag 'posts', class: 'd-flex w-50 flex-wrap' do %>
      <% @posts.each do |post| %>
        <%= render 'post_item', post: post %>
      <% end %>
    <% end %>  

    <%= turbo_frame_tag 'show', class: 'w-50' %>
  </div>

  <%= turbo_frame_tag "new_post" do %>
    <%= link_to 'Add a new post', new_post_path(@post), class: 'btn btn-primary mt-5' %>
  <% end %>
</div>

